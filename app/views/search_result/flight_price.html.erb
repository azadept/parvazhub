<%= render 'layouts/header' %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>
<% provide(:canonical,"<link rel=\"canonical\" href=\"http://parvazhub.com/flights/#{@search_parameter[:origin_english_name]}-#{@search_parameter[:destination_english_name]}\"/> ".html_safe)%>

<% provide(:title,"پروازهاب: قیمت‌‌های #{@search_parameter[:origin_persian_name]} به  #{@search_parameter[:destination_persian_name]} #{@search_parameter[:date].to_date.to_parsi.strftime('%d %B')} #{airline_name_for(@flight)} #{hour_to_human(@flight.departure_time.to_datetime.strftime('%H:%M'))}" ) %>
<% provide(:description,"لیست بهترین قیمت‌های پرواز #{@search_parameter[:origin_persian_name]} به  #{@search_parameter[:destination_persian_name]} #{@search_parameter[:date].to_date.to_parsi.strftime('%d %B')} ایرلاین #{airline_name_for(@flight)} #{hour_to_human(@flight.departure_time.to_datetime.strftime('%H:%M'))}" ) %>

<div class="ui container" id="search-results-container">

    <div class="row flight-price-route">
        <h5 class="ui image header web-font">
            <%= airline_logo_for @flight.airline_code %> 
            <div class="content">
                بهترین قیمت‌های پرواز   
                <%= airline_name_for @flight %>     
                <%= hour_to_human @flight.departure_time.to_datetime.strftime("%H:%M") %>            
                <%= @flight.airplane_type.empty? ? " " : airplane_name_for(@flight.airplane_type) %>
                <div class="sub header" style="margin-top: 7px">
                    <%= @search_parameter[:origin_persian_name] %>
                    به 
                    <%= @search_parameter[:destination_persian_name] %> 
                    <%= @search_parameter[:date].to_date.to_parsi.strftime "%A %d %B"   %>
                </div>
            </div>
        </h5> 
    </div>

        <table class="ui  table rtl" style="width:97% !important">
            <tbody>
                <% @flight_prices.each_with_index do |flight_price,index|  %>
                    <tr class="center aligned very basic">
                        <td width="1%">
                            <% if index==0 %>	
                                <span class="ui red tiny label"><i class="checkmark icon"></i>ارزان‌ترین</span>
                            <% end %>
                        </td>
                        <td>
                            <a href="<%= redirect_path(@search_parameter[:origin_english_name],@search_parameter[:destination_english_name],@search_parameter[:date],@flight.id,flight_price.id,'website') %>"  target= "_blank" rel="nofollow">                    
                                <%= supplier_logo_for flight_price.supplier %>
                                وب‌سایت <%= supplier_to_human flight_price.supplier %> 
                            </a>
                        </td>
                        <td>
                            <div class="suppliers-count">	
                                <b><%= number_with_delimiter(flight_price.price) %></b> تومان
                            </div>
                        
                            <a href="<%= redirect_path(origin_name: @search_parameter[:origin_english_name],destination_name: @search_parameter[:destination_english_name], date: @search_parameter[:date],flight_id: @flight.id,flight_price_id: flight_price.id,channel: 'website') %>" class="ui green label  flight-price"  target= "_blank" rel="nofollow">
                                <i class="external icon"></i> خرید از سایت <%= supplier_to_human flight_price.supplier %>  
                            </a>
                            <!--<span style="font-size:x-small"><%=  time_ago_in_words(flight_price.created_at) %> ago</span>-->
                        </td>
                        <td width="10%">
                        </td>
                    </tr>
                <% end %>
                <% if @flight_prices.empty?  %>
                    <tr class="center aligned very basic">
                        <td>
                            <p>پروازی که انتخاب کرده‌اید پر شده است.  
                            </p>
                        </td>
                    </tr>
                <% end %>
                <% if @prices.count > 1 %>
                    <tr>
                        <td colspan="6">
                            <div style="width:70%; margin:auto" class="nm">
                                <canvas id="myChart"></canvas>

                                <script>
                                var labels = <%= raw @dates %>;
                                var data = <%= @prices %>;
                                var ctx = document.getElementById("myChart").getContext('2d');
                                $(document).ready(function(){
                                    var myChart = new Chart(ctx, {
                                        type: 'line',
                                        data: {labels: labels,datasets: [{label: " تغییرات حداقل قیمت بلیط <%= hour_to_human @flight.departure_time.to_datetime.strftime('%H:%M') %> <%= airline_name_for @flight %> ",borderColor: 'rgb(154, 154, 154)',backgroundColor:  'rgb(154, 154, 154)', data: data,fill: false,lineTension: 0}]},
                                        options: {
                                            showLines: true,
                                            scales: {
                                                xAxes: [{
                                                    ticks: {
                                                        autoSkip: false
                                                    }
                                                }]
                                            }
                                        }
                                    });
                                });
                                </script>
                            </div>
                        </td>
                    </tr>
                <% end %>
            </tbody>		
        </table>
        
        <a href="<%= flight_result_path(@search_parameter[:origin_english_name],@search_parameter[:destination_english_name],@search_parameter[:date]) %> ">
            <button class="ui button web-font fluid secondary">
                بازگشت به لیست پروازهای 
                <%= @search_parameter[:origin_persian_name] %>
                به 
                <%= @search_parameter[:destination_persian_name] %> 
            </button>
        </a>
          
</div>    
    
    <%= render 'layouts/searchbox-helper' %>
    <%= render 'layouts/footer' %>
    
