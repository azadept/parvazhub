<%= render 'layouts/header' %>
<% provide(:title,"پروازهاب: جستجو و مقایسه پرواز") %>
<% provide(:description,"جستجو و مقایسه قیمت پرواز") %>

<div class="ui stackable one column grid centered" id="wide-search-box">
    <h1 class="city-header">
        جستجو و مقایسه قیمت پرواز
    </h1>
    <%= form_for(:search, url: flight_search_path, method: :get, html: {id:"flight_search"}) do |f| %>
        <div class="ui huge form" >
            <div class="two fields">
                <div class="field input-container">
                    <%= f.text_field :originـfield,{:class =>'origin-field typeahead dir-rtl web-font',placeholder: "از مبدا (شهر یا فرودگاه)"} %>						   
                    <%= f.hidden_field :origin,{:id =>'origin'} %>
                </div>
        
                <div class="field input-container">
                    <%= f.text_field :destination_field,{:class =>'destination-field typeahead dir-rtl web-font',placeholder: "به مقصد (شهر یا فرودگاه)"} %>
                    <%= f.hidden_field :destination,{:id =>'destination'} %>
                </div> 
            </div>
            <div class="field ui calendar">
                <div class="ui input left icon">
                    <i class="calendar icon"></i>
                    <%= f.text_field :date_shamsi, {id: 'date-picker', class:'form-control web-font', readonly: 'readonly', autocomplete: 'false'} %>
                    <%= f.text_field :date, {id: 'date-picker-field'} %>
                </div>
            </div>
            <div class="ui center aligned basic segment">
                <button class="ui submit massive yellow web-font fluid right labeled  icon button waiting-modal" type="submit">
                        <i class="right arrow icon"></i>
                        نمایش پروازها
                </button>
            </div>
        </div>
    <%end%>
</div>

<div class="ui container" id="search-results-container" style="padding-top: 1em">
    
    <div class="city-calendar" >
    
        <% @routes.each do |route|  %>
            <% origin = City.find_by(city_code: route.origin)  %>
            <% destination = City.find_by(city_code: route.destination)  %>
            
                <%= link_to "پرواز #{origin.persian_name} به  #{destination.persian_name}", route_page_path(origin_name: "#{origin.english_name}",destination_name: "#{destination.english_name}") %>
                    | 
                <%= link_to "پرواز #{destination.persian_name} به #{origin.persian_name} ", route_page_path(origin_name: "#{destination.english_name}",destination_name: "#{origin.english_name}") %> 
        
        <% end %>
    </div>
</div>


<div class="ui container" id="search-results-container" style="padding-top: 1em">
    <div class="city-calendar" >
        <h4>
            پروازهای
            <b class="yellow"> 
                امروز
            </b> 
        </h4>
        <p>
            <% @routes.each do |route|  %>
            <% origin = City.find_by(city_code: route.origin)  %>
            <% destination = City.find_by(city_code: route.destination)  %>
               
                <%= link_to "پرواز #{origin.persian_name} به  #{destination.persian_name} امروز", flight_result_path(origin_name: "#{origin.english_name}",destination_name: "#{destination.english_name}",date:(Date.today).to_s) %>
                    | 
                <%= link_to "پرواز#{destination.persian_name} به #{origin.persian_name} امروز", flight_result_path(origin_name: "#{destination.english_name}",destination_name: "#{origin.english_name}",date:(Date.today).to_s) %> 
                    | 
                   
            <% end %>
        </p>
    </div>
</div>

<div class="ui container" id="search-results-container" style="padding-top: 1em">
    <div class="city-calendar" >
        <h4>
            پروازهای
            <b class="yellow"> 
                فردا
            </b> 
        </h4>
        <p>
        <% @routes.each do |route|  %>
            <% origin = City.find_by(city_code: route.origin)  %>
            <% destination = City.find_by(city_code: route.destination)  %>
                        <%= link_to "پرواز #{origin.persian_name} به  #{destination.persian_name} فردا", flight_result_path(origin_name: "#{origin.english_name}",destination_name: "#{destination.english_name}",date:(Date.today+1).to_s) %>
                            | 
                        <%= link_to "پرواز#{destination.persian_name} به #{origin.persian_name} فردا", flight_result_path(origin_name: "#{destination.english_name}",destination_name: "#{origin.english_name}",date:(Date.today+1).to_s) %> 
                            | 
                   
            <% end %>
        </p>
    </div>
</div>
<%= render 'layouts/searchbox-helper' %> 
<%= render 'layouts/footer' %>