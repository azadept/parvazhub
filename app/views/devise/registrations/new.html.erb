<%= render 'layouts/header' %>
<% provide(:title,"ورود به اکانت") %>
<% provide(:description,"ورود به اکانت") %>

<div class="ui middle aligned center aligned grid" style="margin-top: 10%">
  <div class="column" style="max-width: 450px">
    <h2 class="ui teal image header">
      <div class="content web-font">
        ثبت اکانت کاربری جدید
      </div>
    </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class:"ui large form"}) do |f| %>
  
          <%= devise_error_messages! %>

      <div class="ui stacked segment">
        <div class="field">
          <div class="ui right icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true , placeholder: "E-mail address", class:"text-left full-width" %>
          </div>
        </div>
        <div class="field">
        <% if @minimum_password_length %>
        <em>حداقل <%= @minimum_password_length %> حرف</em>
        <% end %><br />
          <div class="ui right icon input">
            <i class="lock icon"></i>
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class:"text-left full-width" %>
          </div>
        </div>

        <div class="field">
          <div class="ui right icon input">
            <i class="lock icon"></i>
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password", class:"text-left full-width" %>
          </div>
        </div>

        <%= f.submit "ثبت‌نام" , class:"ui fluid large teal submit button web-font" %>
      </div>
      
      

    <% end %>

    <div class="ui message">
     <%= render "devise/shared/links" %>
    </div>