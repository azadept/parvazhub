<%= render 'layouts/header' %>
<% provide(:title,"فراموشی رمز عبور") %>
<% provide(:description,"بازیابی رمز فراموش شده") %>



<div class="ui middle aligned center aligned grid" style="margin-top: 10%">
  <div class="column" style="max-width: 450px">
    <h2 class="ui teal image header">
      <div class="content web-font">
        بازیابی رمز فراموش شده
      </div>
    </h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {class:"ui large form", method: :post }) do |f| %>
     <%= devise_error_messages! %>

      <div class="ui stacked segment">
        <div class="field">
          <div class="ui right icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true , placeholder: "E-mail address", class:"text-left full-width" %>
          </div>
        </div>
        
        <%= f.submit "ارسال ایمیل بازیابی" , class:"ui fluid large teal submit button web-font" %>
      </div>

    <% end %>

    <div class="ui message">
     <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

