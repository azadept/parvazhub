<% provide(:title,"Supplier control") %>
<div class="ui container" style="margin-top: 2em">
<table class="ui celled striped table ">
	<tbody>
		<% @supplier_list.each do |item|  %>
			<tr class="center aligned">
				<%= form_tag(admin_dashboard_supplier_control_path, method: :post, class:"ui form") do %>
				<%= hidden_field_tag(:id, item.id) %>

					<td><%= item.id %></td>
					<td><%= item.name %></td>
					<td>
						<%= select_tag(:status, options_for_select([['active', true], ['deactive', false]], item.status), {class:"ui  dropdown"}) %>
					</td>
					<td><%= submit_tag("submit", {class:"ui teal button"}) %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
</div>
